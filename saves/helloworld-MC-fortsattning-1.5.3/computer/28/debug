print("Vad vill du ha? Du kan välja mellan melon, paj, kaka, morot!")
svar = read()
print("Hur många? ")
antal = read() -- Vad saknas?

function fram()
    turtle.back()
    turtle.back()
    turtle.back()
end

function tillbaka()
    turtle.forward()
    turtle.forward()
    turtle.forward()
    turtle.turnLeft()
    turtle.drop()
    turtle.turnRight()
end

if svar == melon then-- Vad saknas?
    fram()
    turtle.suckUp() -- Vad saknas?
    tillbaka()
else "svar" = "paj" then --3 saker behöver förändras!
    fram()
    turtle.turnRight()
    turtle.suck("antal")--Något är fel!
    turtle.turnLeft()
    tillbaka()
else "svar" == kaka then --2 saker behöver förändras! 
    fram()
    turtle.turnLeft()
    turtle.suck("antal")-- Något är fel!
    turtle.turnRight()
    tillbaka()
else svar == morot then-- Vad saknas? 2 saker!
    fram()
    turtle.suckDown("antal")--Något är fel!
    tillbaka()
else
    print(Dessvärre erbjuder vi inte det, kom ihåg att stava rätt!)-- Vad saknas?
end
