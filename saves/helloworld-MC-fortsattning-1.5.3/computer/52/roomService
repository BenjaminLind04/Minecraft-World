function fylla()
 turtle.turnRight()
 for i = 1, 16 do
  turtle.select(i)
  turtle.drop()
 end
 turtle.turnLeft()
end

function empty()
 turtle.turnRight()
 for i = 1, 16 do
  turtle.select(i)
  turtle.suck()
 end
 turtle.turnLeft()
end

function clean()
 turtle.suck()
 turtle.forward()
 turtle.turnRight()
 for i =1, 4 do
  turtle.suck()
  turtle.forward()
 end
 turtle.turnLeft()
 turtle.suck()
 turtle.forward()
 turtle.turnLeft()
 for i = 1, 4 do
  turtle.suck()
  turtle.forward()
 end
 turtle.turnRight()
 turtle.back()
 turtle.back()
end

rednet.open("right") --aktiverar modemet till h√∂ger
while true do
id, msg = rednet.receive()

if msg == "1" then
 fylla()
 rednet.broadcast("klart!")
elseif msg == "2" then
 empty()
 rednet.broadcast("klart!")
elseif msg == "3" then
 clean()
 rednet.broadcast("klart!")
else
 rednet.broadcast("sorry, inte ett val :(")
end
end