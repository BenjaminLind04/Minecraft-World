if peripheral.isPresent("right") then
turtle.equipRight()
turtle.equipRight()
else
turtle.equipRight()
end

rednet.open("right")

while true do
id,msg = rednet.receive()

if msg == "rumtv√•" then
turtle.forward()
turtle.turnLeft()
turtle.up()
for i = 1,2 do
    turtle.forward()
end
turtle.turnLeft()
sleep(3)
redstone.setOutput("front", true)
turtle.turnRight()


for i=1, 2 do
    turtle.back()
end
turtle.down()
turtle.turnRight()
turtle.back()
end

end
