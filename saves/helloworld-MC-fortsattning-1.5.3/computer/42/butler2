rednet.open("right")

while true do
id,msg = rednet.receive()

if msg == "rumtv√•" then
turtle.forward()
turtle.turnLeft()
for i = 1,2 do
    turtle.forward()
end
turtle.turnLeft()
sleep(3)
redstone.setOutput("front", true)
turtle.turnRight()


for i=1, 2 do
    turtle.back()
end
turtle.turnRight()
turtle.back()
end

end
